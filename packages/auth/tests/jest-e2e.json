{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "collectCoverageFrom": ["../lib/**/*.ts"],
  "coverageDirectory": "../../../coverage",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/../tsconfig.spec.json"
    }
  }
}
