{
  "name": "@nestjs-cognito/workspace",
  "version": "0.0.0",
  "private": true,
  "description": "Nest - Cognito Monorepo",
  "author": "Loik Fekkai",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b -v packages",
    "clean": "tsc -b --clean packages",
    "format": "prettier packages/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "prepublish:npm": "yarn build && yarn changelog | pbcopy",
    "publish:npm": "lerna publish",
    "prepublish:next": "yarn build",
    "publish:next": "lerna publish --dist-tag next",
    "test": "lerna run test --parallel",
    "test:e2e": "lerna run test:e2e --parallel",
    "test:e2e:auth": "lerna run test:e2e --scope @nestjs-cognito/auth --stream",
    "test:e2e:core": "lerna run test:e2e --scope @nestjs-cognito/core --stream",
    "test:e2e:graphql": "lerna run test:e2e --scope @nestjs-cognito/graphql --stream",
    "prepare": "husky install"
  },
  "resolutions": {
    "graphql": "15.8.0"
  },
  "devDependencies": {
    "@nestjs/core": "^8.0.0 || ^9.0.0",
    "@nestjs/platform-express": "^8.0.0 || ^9.0.0",
    "@nestjs/testing": "^8.0.0 || ^9.0.0",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-angular": "17.0.3",
    "@golevelup/ts-jest": "^0.3.3",
    "@types/graphql": "14.5.0",
    "@types/jest": "28.1.6",
    "@types/node": "17.0.0",
    "@types/node-fetch": "3.0.3",
    "@types/normalize-path": "3.0.0",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "graphql": "15.8.0",
    "graphql-subscriptions": "2.0.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lerna": "5.1.8",
    "lint-staged": "13.0.3",
    "pactum": "^3.1.13",
    "prettier": "2.7.1",
    "reflect-metadata": "0.1.13",
    "release-it": "15.1.3",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nestjs/graphql"
  }
}
