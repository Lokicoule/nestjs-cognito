{
  "name": "@nestjs-cognito/workspace",
  "version": "0.0.0",
  "private": true,
  "description": "Nest - Cognito Monorepo",
  "author": "Loik Fekkai",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b -v packages",
    "changelog": "lerna-changelog",
    "clean": "tsc -b --clean packages",
    "coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "format": "prettier packages/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "prepublish:npm": "yarn build && yarn changelog | pbcopy",
    "publish:npm": "lerna publish",
    "test": "jest",
    "test:e2e": "lerna run test:e2e --parallel",
    "test:e2e:auth": "lerna run test:e2e --scope @nestjs-cognito/auth --stream",
    "test:e2e:core": "lerna run test:e2e --scope @nestjs-cognito/core --stream",
    "test:e2e:graphql": "lerna run test:e2e --scope @nestjs-cognito/graphql --stream",
    "prepare": "husky install",
    "cw": "commitizard -s conventional"
  },
  "devDependencies": {
    "@apollo/server": "4.11.0",
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-angular": "19.4.1",
    "@golevelup/ts-jest": "0.5.0",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/testing": "10.4.1",
    "@types/graphql": "14.5.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.16.4",
    "@types/node-fetch": "3.0.3",
    "@types/normalize-path": "3.0.2",
    "@types/ws": "8.5.12",
    "@typescript-eslint/eslint-plugin": "8.4.0",
    "@typescript-eslint/parser": "8.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "coveralls": "3.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-prettier": "5.2.1",
    "graphql": "16.9.0",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "lerna": "8.1.8",
    "lerna-changelog": "2.2.0",
    "lint-staged": "15.2.10",
    "pactum": "3.7.1",
    "prettier": "3.3.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "whoami": "^0.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/lib/**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "packages/tsconfig.spec.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "preset": "ts-jest"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lokicoule/nestjs-cognito.git"
  }
}
